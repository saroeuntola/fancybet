# =========================================
# Enable Rewrite Engine
# =========================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # -----------------------------------------
    # Redirect index.php or /index to root (/)
    # -----------------------------------------
    RewriteCond %{THE_REQUEST} \s/+(index(\.php)?)([\s?]|$) [NC]
    RewriteRule ^index(\.php)?$ / [R=301,L]

    # -----------------------------------------
    # Sitemap clean URL
    # -----------------------------------------
    RewriteRule ^sitemap\.xml$ sitemap.php [L]

    # -----------------------------------------
    # Redirect .php requests to extensionless
    # -----------------------------------------
    RewriteCond %{THE_REQUEST} \s/+([^\s?]+)\.php[\s?] [NC]
    RewriteRule ^ %1 [R=301,L]

    # -----------------------------------------
    # Internally map extensionless to .php
    # -----------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [L]
</IfModule>

<Files "sitemap.xml">
    SetEnv no-gzip 1
</Files>


# =========================================
# Security: Deny access to sensitive files
# =========================================
<FilesMatch "\.(env|ini|log|bak|sql|git|htaccess)$">
    Require all denied
</FilesMatch>

# =========================================
# Prevent directory listing
# =========================================
Options -Indexes

# =========================================
# Security: Block exploit patterns
# =========================================
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [NC,OR]
    RewriteCond %{QUERY_STRING} (etc/passwd|boot.ini|\.ini|\.log) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%27)|(\')|(\-\-)|(\%23)|(#) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%3C)|(<)|(\%3E)|(>) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# =========================================
# Security Headers
# =========================================
<IfModule mod_headers.c>
    Header unset X-Powered-By
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains; preload"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=()"
</IfModule>

# =========================================
# Gzip Compression
# =========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# =========================================
# Custom 404 Page
# =========================================
ErrorDocument 404 /404.php
